<div class="modal">
  <div class="modal-background"></div>

  <div class="modal-content content-new">
    <h1 style="text-align: center; padding-top:10px; background-color:#343d46;color:white ">More Ideas more mellons</h1>
    <%= form_for @idea, html: { multipart: true } , remote: true do |f| %>
      <div class="control" style="margin:30px; margin-top:1px">
        <div class="wrapper" >
          <figure class="image image-round is-96x96">
            <%= image_tag(current_user.image_url_or_default, alt: "image") %>
          </figure>
        </div>
        <div class="field">
          <div class="control">
            <div class="select">
              <%= f.select :type_id,options_from_collection_for_select(Type.all, :id, :name) %>
            </div>
          </div>
        </div>
        <label class="label" style="margin-left:10px"> Title: </label>
        <%= f.text_field :title, class: "form-control input title-input"%>
        <label class="label" style="margin:10px"> Something about your new idea: </label>
        <%= f.text_area :body, class: "form-control textarea body-textarea", placeholder: "We love your Idea..." %>
        <div class="control" style="margin-top:20px">
          <div class="level">
            <div class="level-left">
              <label class="label" style="margin-left:10px"> Category: </label>
            </div>
            <div class="level-left" style="margin-right:180px;">
              <div class="field">
                <div class="control">
                  <div class="select">
                    <%= f.select :category_id,options_from_collection_for_select(Category.all, :id, :name) %>
                  </div>

                </div>
              </div>
            </div>
          </div>
        </div>
        <label class="label" style="margin-left:10px"> In need: </label>
        <%= f.text_field :need, class: "form-control input need-input"%>
        <div class="control", style="padding:5px; margin-top:20px">
          <div class="level">
            <div class="level-left">
              <div class="file">
                <label class="file-label ">
                  <%= f.fields_for :idea_attachments do |p| %>
                    <%= p.file_field :photo,:multiple => true, name: "idea_attachments[photo][]", class: "file-input" %>
                    <span class="file-cta" style="margin-left:30px">
                      <%= icon("camera-retro", "Photo") %>
                    </span>
                  <% end %>
                </label>
              </div>
            </div>
            <div class="level-right">
              <%= f.submit "Post", class: "button is-primary js-post", style: "margin-right:30px" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
