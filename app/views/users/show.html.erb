<div class="content">
  <nav class="parent" style="">
      <div class="media name-hover">
        <div class="media-left">
          <figure class="image image-round is-96x96">
             <%= image_tag "mellon2.jpg" %>
          </figure>
        </div>
        <div class="media-content">
          <h1 class="title is-4" style="">
            Welcome to Mellon Generation
          </h1>
        </div>
      </div>
  </nav>
  <div class="media name-hover" style="margin-bottom:20px;">
    <div class="media-left">
      <figure class="image image-round is-96x96">
        <%= image_tag(@user.image_url_or_default, alt: "image")%>
      </figure>
    </div>
    <div class="media-content">
      <p class="title is-4" style="padding-top:20px;">
        <%= link_to @user.name_or_email %>
      </p>
    </div>
  </div>
  <div class="columns  is-multiline is-mobile ">
    <div class="column is-2" style="background-color:lightgray;">
    </div>
    <div class="column child is-8">
      <div class="columns is-multiline friends-list" style="background-color:#87CEFA;">
        <% @ideas.each do |idea| %>
          <%= render "ideas/ideapf", idea: idea  %>
        <% end %>
      </div>
    </div>
    <div class="column" style="background-color:lightgray;">

    </div>
  </div>
</div>
